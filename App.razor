<Router AppAssembly="typeof(Program).Assembly">
    <Found Context="routeData">
        <RouteView DefaultLayout="@typeof(MainLayout)" RouteData="@routeData" />
    </Found>
    <NotFound>
        <LayoutView Layout="@typeof(MainLayout)">
            Sorry, there's nothing at this address.
        </LayoutView>
    </NotFound>
</Router>
